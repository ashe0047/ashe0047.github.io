{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Number of COVID-19 Infections in the World by Countries",
    "width": "container",
    "height": 400,
    "projection": {
        "type":"equirectangular"
    },
    "data": {
        "url": "./data/world_countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
    "transform": [
        {
            "lookup": "properties.ISO_A3",
            "from": {
            "data": {
                "url": "./data/dataset/owid-covid-data.csv",
                "format":{
                    "type": "csv",
                    "parse":{"date" :"date"}}
            },
            "key": "iso_code",
            "fields": ["total_cases_per_million", "location", "date"]
            }
        },
        {"calculate": "year(datum.date)", "as": "Date"},
        {"calculate": "datum.total_cases_per_million", "as": "Total Cases Per Million Population"}

    ],
    "mark": {"type": "geoshape", "stroke":"white"}, 
    "encoding": {"color": {
        "field": "Total Cases Per Million Population",
        "type": "quantitative",
        "scale": {"type": "ordinal", "range":["#fee5d9","#fcae91","#fb6a4a","#de2d26","#a50f15"]}
        },
        "tooltip": [
        {"field": "location", "type": "nominal", "title": "Country"},
        {"field": "Total Cases Per Million Population", "type": "quantitative"}
        ]}

  }